<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.YesterdayFragment">

    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/fragment2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="@dimen/dp_24"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/affectedcardbackground"
                    app:cardCornerRadius="8dp"
                    android:layout_width="170dp"
                    android:layout_marginRight="24dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Affected"
                            android:layout_margin="@dimen/dp_15"
                            android:textSize="15sp"
                            android:textColor="@android:color/white"
                            android:id="@+id/tvaffected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="33,851"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:textSize="24sp"
                            android:textColor="@android:color/white"
                            android:id="@+id/tvaffectednumberp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/callbackground"
                    app:cardCornerRadius="8dp"
                    android:layout_width="170dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Death"
                            android:layout_margin="@dimen/dp_15"
                            android:textSize="15sp"
                            android:textColor="@android:color/white"
                            android:id="@+id/tvdeath"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:textSize="24sp"
                            android:textColor="@android:color/white"
                            android:id="@+id/tvdeathcountp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_24"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/recoveredbackground"
                    app:cardCornerRadius="8dp"
                    android:layout_width="190dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Recovered"
                            android:layout_margin="@dimen/dp_15"
                            android:textSize="15sp"
                            android:textColor="@android:color/white"
                            android:id="@+id/tvrecovered"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="17,333"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:textSize="24sp"
                            android:textColor="@android:color/white"
                            android:id="@+id/tvrecoverednumberp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/activebackground"
                    app:cardCornerRadius="8dp"
                    android:layout_width="190dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Active"
                            android:layout_margin="@dimen/dp_15"
                            android:textSize="15sp"
                            android:textColor="@android:color/white"
                            android:id="@+id/tvactive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="9,620"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:textSize="24sp"
                            android:textColor="@android:color/white"
                            android:id="@+id/tvactivecountp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/serious"
                    app:cardCornerRadius="8dp"
                    android:layout_width="190dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Serious"
                            android:layout_margin="@dimen/dp_15"
                            android:textSize="15sp"
                            android:textColor="@android:color/white"
                            android:id="@+id/serious"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView

                            android:text="9,620"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:textSize="24sp"
                            android:textColor="@android:color/white"
                            android:id="@+id/tvseriouscountp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>